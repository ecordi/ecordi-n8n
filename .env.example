# n8n Configuration for Railway

# Basic Configuration
N8N_PORT=5678
N8N_PROTOCOL=https
N8N_HOST=${{RAILWAY_PUBLIC_DOMAIN}}

# Webhook URL (Railway will auto-generate this)
WEBHOOK_URL=https://${{RAILWAY_PUBLIC_DOMAIN}}/

# Database Configuration (PostgreSQL recommended for production)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=${{PGHOST}}
DB_POSTGRESDB_PORT=${{PGPORT}}
DB_POSTGRESDB_DATABASE=${{PGDATABASE}}
DB_POSTGRESDB_USER=${{PGUSER}}
DB_POSTGRESDB_PASSWORD=${{PGPASSWORD}}
DB_POSTGRESDB_SCHEMA=public

# Timezone
GENERIC_TIMEZONE=America/Argentina/Buenos_Aires
TZ=America/Argentina/Buenos_Aires

# Execution Mode
EXECUTIONS_MODE=regular
EXECUTIONS_PROCESS=main

# Security
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme123

# Optional: Encryption key (generate a secure random string)
N8N_ENCRYPTION_KEY=

# Optional: User Management
N8N_USER_MANAGEMENT_DISABLED=false

# Optional: Metrics
N8N_METRICS=false

# Optional: Log Level
N8N_LOG_LEVEL=info

# Optional: Disable UI
N8N_DISABLE_UI=false

# Optional: Editor URL
N8N_EDITOR_BASE_URL=https://${{RAILWAY_PUBLIC_DOMAIN}}/
